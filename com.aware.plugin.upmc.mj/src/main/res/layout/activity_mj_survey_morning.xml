<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:scrollbars="vertical">

    <TextView
        android:id="@+id/morning_greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/morning_greeting"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
        android:id="@+id/drinking_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/morning_greeting"
        android:paddingTop="20dp"
        android:text="@string/last_24_drinking"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <EditText
        android:id="@+id/last_24_total_drinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/drinking_header"
        android:ems="10"
        android:hint="@string/hint_total_number"
        android:inputType="number" />

    <TextView
        android:id="@+id/last_24_smoking_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/last_24_total_drinks"
        android:paddingTop="20dp"
        android:text="@string/last_24_smoking"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <EditText
        android:id="@+id/last_24_total_cigarettes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/last_24_smoking_header"
        android:ems="10"
        android:hint="@string/hint_total_number"
        android:inputType="number" />

    <Button
        android:id="@+id/initiated_submit_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/last_24_total_cigarettes"
        android:layout_marginTop="16dp"
        android:background="@color/primary"
        android:text="@string/btn_submit" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/initiated_submit_1"
        android:layout_marginTop="16dp"
        android:text="@string/btn_cancel" />
</RelativeLayout>